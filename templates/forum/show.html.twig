{% extends 'base.html.twig' %}

{% block title %}{{ post.title }} - HealthApp{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .comments-section { margin-top: 20px; }
    .comment { margin-bottom: 10px; padding: 10px; border: 1px solid #ccc; border-radius: 5px; }
</style>

<div class="example-wrapper">
    <h1>{{ post.title }}</h1>
    <p>{{ post.content }}</p>

    <div class="comments-section">
        <h3>Commentaires :</h3>
        {% for comment in post.comments %}
            <div class="comment">
                <p>{{ comment.content }}</p>
                <small>Post√© le {{ comment.createdAt|date('d/m/Y H:i') }}</small>
            </div>
        {% else %}
            <p>Aucun commentaire pour ce post.</p>
        {% endfor %}
    </div>

    <h3>Ajouter un commentaire :</h3>
    <form method="post" action="{{ path('add_comment', {'postId': post.id}) }}">
        <textarea name="content" required></textarea>
        <button type="submit">Ajouter</button>
    </form>
</div>
{% endblock %}
