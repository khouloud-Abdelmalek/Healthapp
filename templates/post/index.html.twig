{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Liste des Posts</h1>

        <!-- Si aucune donnée n'est trouvée, on affiche un message d'alerte -->
        {% if posts is empty %}
            <div class="alert alert-warning" role="alert">
                Aucun post trouvé.
            </div>
        {% else %}
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Titre</th>
                        <th>Contenu</th>
                        <th>Auteur</th>
                        <th>Créé le</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for post in posts %}
                        <tr>
                            <td>{{ post.id }}</td>
                            <td>{{ post.title }}</td>
                            <td>{{ post.content }}</td>
                            <td>{{ post.author }}</td>
                            <td>{{ post.createdAT ? post.createdAT|date('Y-m-d H:i:s') : '' }}</td>
                            <td>
                                <a href="{{ path('app_post_show', {'id': post.id}) }}" class="btn btn-info btn-sm">Voir</a>
                                <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-warning btn-sm">Éditer</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}

        <a href="{{ path('app_post_new') }}" class="btn btn-primary mt-3">Créer un Nouveau Post</a>
    </div>
{% endblock %}
